 % len(colors)\n","            color = colors[color_idx]\n","\n","            # Plot line with some transparency\n","            ax.plot(lons, lats, color=color, alpha=0.3, linewidth=0.8)\n","\n","    # Remove all axes, labels, ticks - pure art\n","    ax.set_xticks([])\n","    ax.set_yticks([])\n","    ax.spines['top'].set_visible(False)\n","    ax.spines['right'].set_visible(False)\n","    ax.spines['bottom'].set_visible(False)\n","    ax.spines['left'].set_visible(False)\n","    ax.set_aspect('equal')\n","\n","    plt.tight_layout(pad=0)\n","\n","    # Save with filename based on parquet file\n","    output_name = parquet_file.replace('.parquet', '_art.png')\n","    plt.savefig(output_name, dpi=300, facecolor='black',\n","                bbox_inches='tight', pad_inches=0)\n","\n","    print(f\"Saved: {output_name}\")\n","    plt.show()\n","    plt.close()"]},{"cell_type":"code","source":[],"metadata":{"id":"5mg6-5w2tFHw"},"execution_count":null,"outputs":[]}]}