han 2 minutes, use entire file\n","        start_ms = 0\n","        end_ms = total_duration_ms\n","        print(f\"  File is {total_duration_s:.1f}s, using entire duration\")\n","    else:\n","        # Extract middle 2 minutes\n","        start_ms = (total_duration_ms - target_duration_ms) // 2\n","        end_ms = start_ms + target_duration_ms\n","        print(f\"  Extracting middle section: {start_ms/1000:.1f}s to {end_ms/1000:.1f}s (total: {total_duration_s:.1f}s)\")\n","\n","    audio = audio[start_ms:end_ms]\n","\n","    # Convert to mono if stereo\n","    if audio.channels == 2:\n","        audio = audio.set_channels(1)\n","\n","    sr = audio.frame_rate\n","    samples = np.array(audio.get_array_of_samples(), dtype=np.float32)\n","    samples = samples / (2**(audio.sample_width * 8 - 1))\n","\n","    print(f\"  Loaded: {len(samples)/sr:.1f}s at {sr}Hz\")\n","    return samples, sr\n","\n","for file in files:\n","    try:\n","        # Load audio from middle\n","        y, sr = load_audio_middle(file)\n","\n","        scheme = color_schemes[file]\n","        title = titles[file]\n","\n","        # Create custom colormap\n","        cmap = LinearSegmentedColormap.from_list('custom', scheme['gradient'], N=256)\n","\n","        # ============= WAVEFORM ART =============\n","        fig = plt.figure(figsize=(20, 10), facecolor='#0A0E27')\n","\n","        # Main waveform with artistic rendering\n","        ax_main = plt.subplot(2, 1, 1)\n","        time = np.linspace(0, len(y) / sr, len(y))\n","\n","        # Downsample for performance\n","        downsample = max(1, len(y) // 10000)\n","        time_down = time[::downsample]\n","        y_down = y[::downsample]\n","\n","        # Create gradient fill effect\n","        for i, color in enumerate(scheme['gradient']):\n","            alpha = 0.15 + (i * 0.15)\n","            offset = (i - 2) * 0.05\n","            ax_main.fill_between(time_down, y_down * (1 + offset), 0,\n","                                 color=color, alpha=alpha, linewidth=0)\n","\n","        # Main waveform line with varying color\n","        points = np.array([time_down, y_down]).T.reshape(-1, 1, 2)\n","        segments = np.concatenate([points[:-1], points[1:]], axis=1)\n","\n","        from matplotlib.collections import LineCollection\n","        norm = plt.Normalize(y_down.min(), y_down.max())\n","        lc = LineCollection(segments, cmap=cmap, norm=norm, linewidth=2, alpha=0.9)\n","        lc.set_array(y_down)\n","        ax_main.add_collection(lc)\n","\n","        ax_main.set_xlim(time_down.min(), time_down.max())\n","        ax_main.set_ylim(y_down.min() * 1.2, y_down.max() * 1.2)\n","        ax_main.set_facecolor('#0A0E27')\n","        ax_main.spines['top'].set_visible(False)\n","        ax_main.spines['right'].set_visible(False)\n","        ax_main.spines['left'].set_color('#3A4A6B')\n","        ax_main.spines['bottom'].set_color('#3A4A6B')\n","        ax_main.tick_params(colors='#8A9AB8', labelsize=11)\n","        ax_main.grid(True, alpha=0.15, color='#3A4A6B', linestyle='-', linewidth=0.5)\n","        ax_main.set_xlabel('Time (seconds)', fontsize=13, color='#A8B8D8', fontweight='bold')\n","        ax_main.set_ylabel('Amplitude', fontsize=13, color='#A8B8D8', fontweight='bold')\n","        ax_main.set_title(f'{title}', fontsize=22,\n","                         color='#FFFFFF', pad=20, fontweight='bold')\n","\n","        # Spectral centroid overlay\n","        ax_spectral = plt.subplot(2, 1, 2)\n","\n","        # Compute spectral features\n","        spectral_centroids = librosa.feature.spectral_centroid(y=y, sr=sr)[0]\n","        spectral_rolloff = librosa.feature.spectral_rolloff(y=y, sr=sr)[0]\n","        rms = librosa.feature.rms(y=y)[0]\n","\n","        time_frames = np.linspace(0, len(y) / sr, len(spectral_centroids))\n","\n","        # Normalize for visualization\n","        centroids_norm = (spectral_centroids - spectral_centroids.min()) / (spectral_centroids.max() - spectral_centroids.min())\n","        rolloff_norm = (spectral_rolloff - spectral_rolloff.min()) / (spectral_rolloff.max() - spectral_rolloff.min())\n","        rms_norm = (rms - rms.min()) / (rms.max() - rms.min())\n","\n","        # Create filled areas with transparency\n","        ax_spectral.fill_between(time_frames, 0, centroids_norm,\n","                                color=scheme['gradient'][0], alpha=0.4, label='Brightness')\n","        ax_spectral.fill_between(time_frames, 0, rolloff_norm,\n","                                color=scheme['gradient'][2], alpha=0.3, label='Spectral Edge')\n","        ax_spectral.fill_between(time_frames, 0, rms_norm * 0.5,\n","                                color=scheme['gradient'][4], alpha=0.5, label='Energy')\n","\n","        # Add flowing lines\n","        ax_spectral.plot(time_frames, centroids_norm, color=scheme['gradient'][0],\n","                        linewidth=3, alpha=0.9)\n","        ax_spectral.plot(time_frames, rolloff_norm, color=scheme['gradient'][2],\n","                        linewidth=3, alpha=0.8)\n","\n","        ax_spectral.set_facecolor('#0A0E27')\n","        ax_spectral.spines['top'].set_visible(False)\n","        ax_spectral.spines['right'].set_visible(False)\n","        ax_spectral.spines['left'].set_color('#3A4A6B')\n","        ax_spectral.spines['bottom'].set_color('#3A4A6B')\n","        ax_spectral.tick_params(colors='#8A9AB8', labelsize=11)\n","        ax_spectral.grid(True, alpha=0.15, color='#3A4A6B', linestyle='-', linewidth=0.5)\n","        ax_spectral.set_xlabel('Time (seconds)', fontsize=13, color='#A8B8D8', fontweight='bold')\n","        ax_spectral.set_ylabel('Normalized Value', fontsize=13, color='#A8B8D8', fontweight='bold')\n","        ax_spectral.set_title('Spectral Character Â· The Soul of Sound', fontsize=18,\n","                            color='#FFFFFF', pad=15, fontweight='bold')\n","        ax_spectral.legend(loc='upper right', facecolor='#1A2540', edgecolor='#3A4A6B',\n","                          labelcolor='#A8B8D8', fontsize=11)\n","\n","        plt.tight_layout()\n","        plt.savefig(f'{titles[file].lower().replace(\" \", \"_\")}_art.png',\n","                   dpi=300, bbox_inches='tight', facecolor='#0A0E27')\n","        print(f\"âœ“ Created {titles[file].lower().replace(' ', '_')}_art.png\")\n","        plt.close()\n","\n","        # ============= SPECTROGRAM ART =============\n","        fig, ax = plt.subplots(figsize=(20, 10), facecolor='#0A0E27')\n","\n","        # High-resolution mel spectrogram\n","        mel_spec = librosa.feature.melspectrogram(y=y, sr=sr, n_mels=128,\n","                                                  fmax=8000, hop_length=512)\n","        mel_spec_db = librosa.power_to_db(mel_spec, ref=np.max)\n","\n","        # Display with custom colormap\n","        img = librosa.display.specshow(mel_spec_db, sr=sr, x_axis='time', y_axis='mel',\n","                                       ax=ax, cmap=cmap, fmax=8000, hop_length=512)\n","\n","        ax.set_facecolor('#0A0E27')\n","        ax.spines['top'].set_visible(False)\n","        ax.spines['right'].set_visible(False)\n","        ax.spines['left'].set_color('#3A4A6B')\n","        ax.spines['bottom'].set_color('#3A4A6B')\n","        ax.tick_params(colors='#8A9AB8', labelsize=12)\n","        ax.set_xlabel('Time (seconds)', fontsize=14, color='#A8B8D8', fontweight='bold')\n","        ax.set_ylabel('Frequency (Hz)', fontsize=14, color='#A8B8D8', fontweight='bold')\n","        ax.set_title(f'{title}', fontsize=24, color='#FFFFFF', pad=25, fontweight='bold')\n","\n","        # Colorbar with custom styling\n","        cbar = plt.colorbar(img, ax=ax, format='%+2.0f dB', pad=0.02)\n","        cbar.ax.tick_params(colors='#8A9AB8', labelsize=10)\n","        cbar.set_label('Intensity (dB)', rotation=270, labelpad=25,\n","                      fontsize=12, color='#A8B8D8', fontweight='bold')\n","        cbar.ax.set_facecolor('#1A2540')\n","        cbar.outline.set_edgecolor('#3A4A6B')\n","\n","        plt.tight_layout()\n","        plt.savefig(f'{titles[file].lower().replace(\" \", \"_\")}_spectrum_art.png',\n","                   dpi=300, bbox_inches='tight', facecolor='#0A0E27')\n","        print(f\"âœ“ Created {titles[file].lower().replace(' ', '_')}_spectrum_art.png\")\n","        plt.close()\n","\n","    except Exception as e:\n","        print(f\"âœ— Error processing {file}: {type(e).__name__}: {str(e)}\")\n","        import traceback\n","        traceback.print_exc()\n","\n","print(\"\\nâœ¨ Gallery Complete âœ¨\")\n","print(\"Generated artistic visualizations:\")\n","print(\"  â€¢ street_symphony_art.png & street_symphony_spectrum_art.png\")\n","print(\"  â€¢ recorder_meditation_art.png & recorder_meditation_spectrum_art.png\")\n","print(\"  â€¢ xylophone_dance_art.png & xylophone_dance_spectrum_art.png\")\n","print(\"\\nEach piece captures the essence and beauty of sound ðŸŽ¨ðŸŽµ\")"]}]}